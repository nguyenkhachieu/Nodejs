extends ../layouts/common

block content

    h1 Users

    a.btn.btn-primary.mb-2(href="/users/create") New User

    form(action="/users/search", method="get" class="d-flex mb-3")
        input(type="text", name="q", class="form-control")
        button(class="btn btn-primary ml-2") Search

    table.table
        tr
            th Name
            th Phone
            th Email
            th
        each user in users
            tr
                td= user.name
                td= user.phone
                td=user.email
                td
                    a.btn.btn-light(href=`/users/${user.id}`) View